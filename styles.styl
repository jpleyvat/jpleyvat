*
  box-sizing border-box
  color white
  font-size 3vw
  margin 0
  padding 0
  text-align center

body
  height 100vh
  overflow hidden
  position relative
  width 100%

.navigation
  display flex
  flex-direction column
  left 95%
  position fixed
  top 35%
  z-index 2
  & ul
    width .75rem
    list-style none
    position absolute
    & li:hover img
      height .75rem
  & img 
    cursor pointer
    margin-top .1rem
    height .5rem

.container
  bottom 0
  height 100vh
  position relative
  width 100vw
  
.page
  align-items center
  display grid
  grid-template-columns  repeat(12, 1fr)
  grid-template-rows   repeat(3, 1fr)
  height 100vh
  justify-items center
  overflow hidden
  position absolute
  width 100%
  &:nth-child(1)
    background-image linear-gradient(#000000, #0E0D3B)
  &:nth-child(2)
    background-image linear-gradient(#0E0D3B, #2E1C54)
  &:nth-child(3)
    background-image linear-gradient(#2E1C54, #2D132C)
  &:nth-child(4)
    background-image linear-gradient(#2D132C, #801336)
  &:nth-child(5)
    background-image linear-gradient( #801336, #C72C41)
  &:nth-child(6)
    background-image linear-gradient( #C72C41, #EE4540)

  & .brand
    grid-column 5/9
    grid-row 2
    width 100%
    & h6
      font-weight lighter
      font-size .5rem

    & img 
      height 2rem

    & .arrow
      animation-duration 2s
      animation-iteration-count infinite
      animation-name bounce
      animation-timing-function ease-out
      cursor pointer
      margin-top 2rem
      max-height 1rem
      & img
        height 1rem
        transition 0.25s ease 

      &:hover
        animation-play-state paused

      &:hover img
        transform scale(1.5)
      
  & .about
    grid-column 2/8
    grid-row 2

   & p
      font-size .5rem
      margin-top 1.5rem

      & b
        color #C72C41
        font-size .525rem

  initial-project-image-size = 20vh
  & .project
    align-items center
    display flex
    flex-direction column
    grid-row 2
    justify-content center
    & img.project-image  
      border-radius 100%
      cursor pointer
      height initial-project-image-size
      position absolute
      transition transform .95s ease, border-radius .5s ease

    & .description
      background-color salmon
      border-radius 10%
      margin-left: -9999px
      opacity 0
      padding .5rem
      transition 1s transform ease, opacity 1s ease
      width "calc(%s *1.6)" % initial-project-image-size
      & p
        margin-top .25rem
      & img 
        height "calc(%s / 5)" % initial-project-image-size

    & .project-tools
      display flex
      justify-content space-between
      position absolute
      width initial-project-image-size
      & img 
        height "calc(%s / 4)" % initial-project-image-size

    &:nth-child(1)
      grid-column 2/4

    &:nth-child(2)
      grid-column 5/7

    &:nth-child(3)
      grid-column 8/10  

    &:hover img.project-image
      border-radius 0
      transform scale(1.75)
      z-index 2

    &:hover .description
        margin-left: 0
        opacity 1
        transform translate(120%)
        z-index 3
      
.svg
  & img 
    width 25vh
  &#space-ship
    grid-column-start 2
    grid-column-end 5
  &#rocket
    grid-column 8/12
    grid-row 3
  &#meteorite
    grid-column 5/8
    grid-row 1
  &#meteorites
    grid-column 9/12
    grid-row 3
  &#plane
    grid-column 1/4
    grid-row 3
  &#cloud
    grid-column 1/4
    grid-row 2
  &#birds
    grid-column 10/12
  &#forest
    position absolute
    bottom -5%
    & img 
      min-width 100vw
      height 60vh

@keyframes bounce 
  0%
    transform translate(0px, 0px)
  50%
    transform translate(0px, 15px)
  100%

@media only screen and (max-aspect-ratio 1/1) 
  initial-project-image-size = 20vh
  .page
    & .about
       grid-column 4/10
      grid-row 2
    & .project
      & .description
        max-width "calc(%s * 1.1)" % initial-project-image-size

      &:nth-child(1)
        grid-column 7
        grid-row 1

      &:nth-child(2)
        grid-column 7
        grid-row 2

      &:nth-child(3)
        grid-column 7
        grid-row 3

      &:hover img.project-image
        border-radius 0
        transform scale(1.1)
        transform translate(-60%)
        z-index 2
      
      &:hover .description
        margin-left: 0
        opacity 1
        transform translate(50%)
        z-index 3

      &:hover .project-tools
        display none

  


