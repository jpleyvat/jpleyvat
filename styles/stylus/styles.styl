font-color = #C5C8C6

gradient-color-1 = #000000
gradient-color-2 = #0E0D3B
gradient-color-3 = #2E1C54
gradient-color-4 = #2D132C
gradient-color-5 = #801336
gradient-color-6 = #C72C41
gradient-color-7 = #EE4540

color-1 = #A2A79E
color-2 = #A27E8E
color-3 = #A77464
color-4 = #88292F

description-background-color = color-2
highlight-color = color-4
description-text-color = font-color

*
  box-sizing border-box
  color font-color
  font-family: 'Open Sans', sans-serif;
  // font-family: 'Roboto', sans-serif;
  font-size 3vw
  margin 0
  padding 0
  text-align center

body
  height 100vh
  overflow hidden
  position relative
  width 100%

.contact
  align-items center
  display flex
  float right
  justify-content flex-end
  margin-top .2rem
  position fixed
  width 100%
  z-index 2
  & p
    font-size .3rem
    cursor pointer
  & img
    cursor pointer
    margin-right .2rem
    height 1rem

.navigation
  display flex
  flex-direction column
  left 95%
  position fixed
  top 37.5%
  z-index 2
  & ul
    width .75rem
    list-style none
    position absolute 
    & li
      align-items center 
      display flex
      justify-content center
      height .7rem
  & img 
    cursor pointer
    // margin-top .1rem
    height .5rem
    &:hover
      height .6rem

.container
  bottom 0
  height 100vh
  position relative
  width 100vw
  
.page
  align-items center
  display grid
  // grid-template-columns  repeat(12, 1fr)
  grid-template-columns  repeat(12, calc(100vw/12))
  // grid-template-rows   repeat(3, 1fr)
  grid-template-rows   repeat(3, calc(100vh/3))
  height 100vh
  justify-items center
  overflow hidden
  position absolute
  width 100%
  &:nth-child(1)
    background-image linear-gradient(gradient-color-1, gradient-color-2)
  &:nth-child(2)
    background-image linear-gradient(gradient-color-2, gradient-color-3)
  &:nth-child(3)
    background-image linear-gradient(gradient-color-3, gradient-color-4)
  &:nth-child(4)
    background-image linear-gradient(gradient-color-4, gradient-color-5)
  &:nth-child(5)
    background-image linear-gradient( gradient-color-5, gradient-color-6)
  &:nth-child(6)
    background-image linear-gradient( gradient-color-6, gradient-color-7)

  & .brand
    grid-column 5/9
    grid-row 2
    width 100%
    & h6
      font-weight lighter
      font-size .5rem

    & img 
      height 2rem

    & .arrow
      animation-duration 2s
      animation-iteration-count infinite
      animation-name bounce
      animation-timing-function ease-out
      cursor pointer
      margin-top 2rem
      max-height 1rem
      & img
        height 1rem
        transition 0.25s ease 

      &:hover
        animation-play-state paused

      &:hover img
        transform scale(1.5)
      
  & .about
    grid-column 2/8
    grid-row 2

   & p
      font-size .5rem
      margin-top 1.5rem

      & b
        color highlight-color
        font-size .525rem

  initial-project-image-size = 20vh
  & .project-container
    align-items center
    display flex
    flex-direction column
    grid-row 2
    justify-content center
    & img.project-image  
      border-radius 30%
      cursor pointer
      height initial-project-image-size
      position absolute
      transition transform .25s ease, border-radius .5s ease

    & .description
      background-color description-background-color
      border-radius 1%
      margin-left -9999px
      min-width 20vw
      opacity 0
      padding .6rem .2rem
      transition .25s transform ease, opacity 1s ease
      -webkit-clip-path: polygon(0 0, 0 100%, 100% 100%, 100% 25%, 75% 0);
      clip-path: polygon(0 0, 0 100%, 100% 100%, 100% 20%, 80% 0);
      width initial-project-image-size
      // & h1
      //   color highlight-color
      & h1
        font-size .8rem
        color description-text-color
      & p
        font-size .4rem
        color description-text-color
        margin-top .1rem
        & a
          color highlight-color
          text-decoration none
          font-size inherit
      & img 
        height "calc(%s / 5)" % initial-project-image-size

    & .project-tools
      display flex
      justify-content space-around
      position absolute
      width initial-project-image-size
      & img 
        height "calc(%s / 4)" % initial-project-image-size

    &:nth-child(1)
      grid-column 2/4

    &:nth-child(2)
      grid-column 5/7

    &:nth-child(3)
      grid-column 8/10  

    &:hover img.project-image
      border-radius 0
      transform scale(1.3)
      z-index 2

    &:hover .description
        margin-left: 1rem
        opacity 1
        transform translate(100%)
        z-index 3
      
  & .form
    grid-column 5/9
    grid-row 1
    position absolute
    width 100%
    z-index 2
    & form
      font-size .5rem
      & label
        font-size inherit

      & input 
        font-size inherit
        height .75rem

      & textarea
        background: transparent
        color: transparent;
        font-size inherit
        height 20vh
        resize: none;
      & .btn
        background-color: #f8f9fa;
        border-color: #f8f9fa;
        border: 1px solid transparent;
        border-radius: .25rem;
        color: black;
        cursor pointer
        display: inline-block;
        font-size: inherit ;
        font-weight: 400;
        height 2em
        line-height: 1.5;
        margin-top 1em
        padding: 0 .75rem;
        text-align: center;
        transition: color .15s ease-in-out,background-color .15s ease-in-out,border-color .15s ease-in-out,box-shadow .15s ease-in-out;
        vertical-align: middle;
        &:hover
          color: black ;
          background-color: #E2E6EA;
          border-color: #E2E6EA;

      & .form-control
        background-clip padding-box
        background-color #fff
        border 1px solid #ced4da
        border-radius .25rem
        color #495057
        display block
        font-size inherit 
        font-weight 400
        line-height 1.5
        padding .375rem .75rem
        width 100%
        transition border-color .15s ease-in-out,box-shadow .15s ease-in-out
        &:focus
          border 1px solid #ced4da
          outline none

.svg
  & img 
    width 25vh
  &#space-ship
    grid-column-start 2
    grid-column-end 5
  &#rocket
    grid-column 8/12
    grid-row 3
  &#meteorite
    grid-column 5/8
    grid-row 1
  &#meteorites
    grid-column 9/12
    grid-row 3
  &#plane
    grid-column 1/4
    grid-row 3
  &#cloud
    grid-column 1/4
    grid-row 2
  &#birds
    grid-column 10/12
  &#forest
    position absolute
    bottom -20%
    & img 
      min-width 100vw
      // height 60vh

@keyframes bounce 
  0%
    transform translate(0px, 0px)
  50%
    transform translate(0px, 15px)
  100%

@media only screen and (max-aspect-ratio 4/3) 
  *
    font-size 3vh
  .contact
    & p
      font-size .5rem
    & img
      margin-right .5rem
      height 1.5rem

  .page
    & .about
      grid-column 4/10
      grid-row 2

    & .project-container
      & .description
        border-radius 10%
        -webkit-clip-path: polygon(0 0, 0 100%, 100% 100%, 100% 0%, 100% 0);
        clip-path: polygon(0 0, 0 100%, 100% 100%, 100% 0%, 100% 0);
        max-width "calc(%s * 1.1)" % initial-project-image-size
        & p
          font-size .6rem

      &:nth-child(1)
        grid-column 7
        grid-row 1

      &:nth-child(2)
        grid-column 7
        grid-row 2

      &:nth-child(3)
        grid-column 7
        grid-row 3

      &:hover img.project-image
        border-radius 0
        transform scale(1.1)
        transform translate(-60%)
        z-index 2
      
      &:hover .description
        margin-left: 0
        opacity 1
        transform translate(45%)
        z-index 3

      &:hover .project-tools
        display none

    & .form
      grid-column 3/11
    
  .svg
  	&#forest
      bottom -1%
      & img 
        min-width 100vw
        height 60vw